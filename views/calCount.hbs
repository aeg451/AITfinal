    <center>
    <h3><u><b>How Many Calories Should You Consume?</b></u></h3>
    <hr>
    <div>
    <label>Female:&nbsp;<input id="female" type="radio" name="gender" onchange="cals()"></label> &nbsp;&nbsp;
    <label>Male:&nbsp;<input id="male" type="radio" name="gender" onchange="cals()" checked>
    </label> <br><hr>

    <label>Age (years):&nbsp;</label><input style="max-width: 6em;" class="form-control" id="age" type="number" oninput="cals()" value="50"><br><hr>
   
    <label>Height (inches):&nbsp;</label><input style="max-width: 6em;"class="form-control" id="height" type="number" oninput="cals()" value="70"> <br><hr>
    
    <label>Weight (lbs):&nbsp;</label><input style="max-width: 6em;" class="form-control" id="weight" type="number" oninput="cals()" value="225"><br><hr>
   <h3> <label onclick="cals">Base metabolic rate: <span id="totalCals"></span> kcal per day</label></h3>
    </div> </center>

    <script>
    function cals() {
        let age = document.getElementById("age").value;
        let height = document.getElementById("height").value * 2.54;
        let weight = document.getElementById("weight").value / 2.2;
        let result = 0;
        if (document.getElementById("male").checked){
            result = 66.47 + (13.75 * weight) + (5.0 * height - (6.75 * age));
        }
        else if (document.getElementById("female").checked){
            result = 665.09 + (9.56 * weight) + (1.84 * height - (4.67 * age));
        }
        document.getElementById("totalCals").innerHTML = Math.round(result);
    }
    cals()
    </script>