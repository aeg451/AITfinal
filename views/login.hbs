<script>
        document.addEventListener("DOMContentLoaded", main);
        function main() {
            var f = document.getElementById('loginBtn');
            f.addEventListener('click', function (evt) {
                if( (document.getElementsByName('username')[0].value == "")
                ||(document.getElementsByName('password')[0].value == "") ) {
                    evt.preventDefault();
                    var err = document.createTextNode("Please enter username and password");
                    var span = document.createElement("span");
                    span.style.color = "red";
                    span.appendChild(err);
                    document.getElementById('log').appendChild(span);
                }
            });
        }
    </script>
